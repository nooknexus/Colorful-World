{
  "manifest_version": 2,
  "name": "Colorful World",
  "version": "1.0",
  "description": "Disables all grayscale CSS filters on a page.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "colorful-world@nooknexus",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"],
        "recommended": []
      }
    }
  }
}
